<script type="text/javascript">
  ShopifyApp.ready(function(){
    ShopifyApp.Bar.initialize({
      title: "Your Products",
      icon: "<%= asset_path('faveicon.png') %>"
    });
  });
</script>

<html>
<head>
  <title>Install Page</title>
</head>

<div class="container-fluid">
  <div class="well col-md-6 col-md-offset-3"
    <body>
      <div class="form-group"> 
        <h2>Install ByteStand</h2>
          <%= form_tag({controller: "sessions", action: "create"}, method: "post") do %>
            <%= label_tag("Enter your Shopify Shop URL:") %>
            <div class="input-group">
              <%= text_field_tag :shop, nil, {
              placeholder: 'put in your store name', class: 'form-control input-lg'} %>
              <div class="input-group-addon input-lg">.myshopify.com</div>
            </div>
              <button class="btn btn-primary btn-lg spacer" type='submit'>Install</button>
          <% end %>
      </div>

    </body>
  </div>
</div>
</html>
