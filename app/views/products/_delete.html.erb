
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
          <h3>Delete Product: <%= @product.asin %></h3>
        </div>
        <div class="well">
            <div class="modal-body">
            <ul class="errors"></ul>
            Are you sure you wish to delete <b><%= @product.title %></b>?
            </div>
        </div>
        
        <div class="modal-footer">
          <%= link_to "Yes, Delete This Product", product_path(@product), method: :delete, class: "orange btn btn-primary btn-sm" %>
          <%= link_to "No, Please Don't", "#", class: "btn btn-primary btn-sm", data: { dismiss: "modal" } %>
        </div>
    </div>
  </div>
