<%= render '/shared/nav' %>

  <script type="text/javascript">
  $(document).ready( function () {
      $('#products').DataTable();
  } );
  </script>


<div class="container-fluid">
  
  <table id="products" class="table table-striped table-hover table-bordered table-condensed">
    <thead>
      <tr>
        <th><a>TITLE</a></th>
        <th><a>ASIN</a></th>
        <th><a>PRICE</a></th>
        <th><a>SKU</a></th>
        <th> </th>
        <th> </th>
      </tr>
    </thead>
<tbody class="product-index">
    
<% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.asin %></td>
    <td><%= number_to_currency(product.price) %></td>
    <td><%= product.sellersku %></td>
    <td><%= link_to "Edit", edit_product_path(product), remote: true, class: "btn btn-primary btn-sm" %></td>
    <td><%= link_to "Delete", product_delete_path(product), remote: true, class: "orange btn btn-primary btn-sm" %></td>
  </tr>
<% end %>

    </tbody>
  </table>
</div>

<div id="product-modal" class="modal fade"></div>

