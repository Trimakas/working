<%= form_for @product do |f| %>
    
      <div class="modal-dialog modal-lg" id="product-modal" class="modal fade" tabindex="-1">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">ASIN: <%= f.label :asin %></h4>
            <h4 class="modal-title" id="myModalLabel">Seller SKU: <%= f.label :sellersku %></h4>
          </div>
          <div class="modal-body">
            <ul class="errors"></ul>
            <div class="container-fluid">

                <h3>Edit Product</h3>

                <div class="well">
                  <div class="row spacer">
                    <div class="form-group">                        
                        <label for="title" class="col-sm-1 control-label">Title</label>
                        <div class="col-sm-10">
                          <%= f.text_field :title, class: 'form-control' %>
                        </div>
                    </div>
                  </div>
                  
                  <div class="row spacer">                        
                    <div class="form-group">
                        <label for="asin" class="col-sm-1 control-label">ASIN</label>
                        <div class="col-sm-10">                            
                          <%= f.text_field :asin, class: 'form-control' %>
                        </div>
                    </div>
                  </div>  
                  
                  <div class="row spacer">                        
                    <div class="form-group">
                        <label for="price" class="col-sm-1 control-label">Price</label>
                        <div class="col-sm-10">                            
                          <%= f.text_field :price, class: 'form-control' %>
                        </div>
                    </div>
                  </div>  
                  
                  <div class="row spacer">                        
                    <div class="form-group">
                        <label for="sku" class="col-sm-1 control-label">Seller SKU</label>
                        <div class="col-sm-10">                            
                          <%= f.text_field :sellersku, class: 'form-control' %>
                        </div>
                    </div>
                  </div>  
                </div>
          </div>
          <div class="modal-footer">
            <%= f.submit "Update", :class=> "btn btn-primary" %>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
<% end %>